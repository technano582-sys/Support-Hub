@{
  ViewData["Title"] = "Login";
  Layout = null;
}

<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <title>Login - ServiceCore</title>

    <link rel="icon" type="image/png" href="~/favicon.png" />

    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&family=Plus+Jakarta+Sans:wght@600;700;800&display=swap" rel="stylesheet" />

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/css/servicecore.css" rel="stylesheet" />
  </head>

  <body>
    <div class="container py-5">
      <div class="row justify-content-center">
        <div class="col-12 col-md-6 col-lg-5">
          <div class="text-center mb-4">
            <div class="brand-badge mx-auto mb-3">SC</div>
            <h1 class="h3 fw-bold" data-testid="text-login-title">Welcome back</h1>
            <p class="text-muted mb-0" data-testid="text-login-subtitle">Sign in to ServiceCore</p>
          </div>

          <div class="card shadow-sm">
            <div class="card-body p-4">
              <form id="form-login" data-testid="form-login" method="post" action="#">
                <div class="mb-3">
                  <label class="form-label" for="loginEmail">Email</label>
                  <input class="form-control" id="loginEmail" type="email" value="alex.morgan@company.com" required data-testid="input-login-email" />
                </div>
                <div class="mb-3">
                  <label class="form-label" for="loginPassword">Password</label>
                  <input class="form-control" id="loginPassword" type="password" value="password123" required data-testid="input-login-password" />
                </div>
                <div class="d-flex align-items-center justify-content-between mb-3">
                  <div class="form-check">
                    <input class="form-check-input" type="checkbox" id="rememberMe" checked data-testid="input-remember" />
                    <label class="form-check-label" for="rememberMe">Remember me</label>
                  </div>
                  <a class="link-primary small" href="#" data-testid="link-forgot">Forgot password?</a>
                </div>

                <button class="btn btn-primary w-100" type="submit" data-testid="button-login">Sign in</button>

                <div class="text-center mt-3">
                  <a class="small text-muted" href="~/" data-testid="link-skip-login">Skip (demo)</a>
                </div>
              </form>
            </div>
          </div>

          <p class="text-center text-muted small mt-3">No account? Contact your administrator.</p>
        </div>
      </div>
    </div>

    <div class="toast-container position-fixed bottom-0 end-0 p-3" id="toastHost" data-testid="toast-host"></div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/servicecore.js"></script>
  </body>
</html>
