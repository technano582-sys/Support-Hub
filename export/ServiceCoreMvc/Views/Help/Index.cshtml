@{
  ViewData["Title"] = "Help";
  Layout = "_Layout";
}

<div class="container-fluid">
  <div class="d-flex flex-wrap align-items-center justify-content-between gap-3 mb-4">
    <div>
      <h1 class="h3 fw-bold mb-1" data-testid="text-help-title">Help & Chat Support</h1>
      <div class="text-muted" data-testid="text-help-subtitle">Knowledge base + live chat (mock).</div>
    </div>
    <div class="d-flex gap-2">
      <button class="btn btn-outline-secondary btn-sm" id="openChatBtn" data-testid="button-open-chat">Open chat</button>
    </div>
  </div>

  <div class="row g-3">
    <div class="col-12 col-lg-5">
      <div class="card shadow-sm" data-testid="card-kb">
        <div class="card-body">
          <div class="fw-bold mb-2">Popular articles</div>
          <div class="list-group" id="kbList" data-testid="list-kb"></div>
        </div>
      </div>
    </div>
    <div class="col-12 col-lg-7">
      <div class="card shadow-sm" data-testid="card-chat">
        <div class="card-body">
          <div class="d-flex justify-content-between align-items-center mb-2">
            <div>
              <div class="fw-bold">Live chat</div>
              <div class="text-muted small">Ask a question — we’ll reply instantly (mock).</div>
            </div>
            <span class="badge text-bg-success" data-testid="status-chat">Online</span>
          </div>

          <div class="chat" id="chatThread" data-testid="chat-thread"></div>

          <form class="mt-3" id="chatForm" data-testid="form-chat">
            <div class="input-group">
              <input class="form-control" id="chatInput" placeholder="Type a message…" data-testid="input-chat" />
              <button class="btn btn-primary" type="submit" data-testid="button-chat-send">Send</button>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>
