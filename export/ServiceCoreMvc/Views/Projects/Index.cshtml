@{
  ViewData["Title"] = "Projects";
  Layout = "_Layout";
}

<div class="container-fluid">
  <div class="d-flex flex-wrap align-items-center justify-content-between gap-3 mb-4">
    <div>
      <h1 class="h3 fw-bold mb-1" data-testid="text-projects-title">Projects</h1>
      <div class="text-muted" data-testid="text-projects-subtitle">Plan, track, and deliver initiatives with confidence.</div>
    </div>
    <div class="d-flex gap-2">
      <button class="btn btn-primary btn-sm" data-action="new-project" data-testid="button-new-project-2">New Project</button>
    </div>
  </div>

  <div class="row g-3" id="projectsGrid" data-testid="grid-projects"></div>
</div>
